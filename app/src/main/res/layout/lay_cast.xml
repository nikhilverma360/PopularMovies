<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txv_cast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_32"
        android:fontFamily="@font/worksans_bold"
        android:text="@string/txt_cast"
        android:textSize="@dimen/txt_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider_cast"
        android:layout_width="@dimen/divider_width"
        android:layout_height="@dimen/min_height"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/txv_cast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txv_cast" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_cast"
        android:layout_width="@dimen/min_width"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_4"
        android:paddingBottom="@dimen/margin_4"
        android:layout_marginBottom="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txv_cast" />
</android.support.constraint.ConstraintLayout>