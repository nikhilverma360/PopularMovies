<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imv_review_person"
        android:layout_width="@dimen/review_person"
        android:layout_height="@dimen/min_height"
        android:layout_marginStart="@dimen/margin_16"
        android:contentDescription="@string/review_person"
        app:layout_constraintBottom_toBottomOf="@+id/txv_review_person"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txv_review_person"
        app:srcCompat="@drawable/ic_review" />

    <TextView
        android:id="@+id/txv_review"
        android:layout_width="@dimen/min_width"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_8"
        android:fontFamily="@font/worksans_regular"
        android:textAlignment="viewStart"
        android:textColor="@color/grey_600"
        android:textSize="@dimen/txt_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txv_review_person"
        tools:text="@string/review_placeholder" />

    <TextView
        android:id="@+id/txv_review_person"
        android:layout_width="@dimen/min_width"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_16"
        android:fontFamily="@font/worksans_bold"
        android:textColor="@color/grey_700"
        android:textSize="@dimen/txt_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imv_review_person"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Mr. Lorem Ipsum" />
</android.support.constraint.ConstraintLayout>